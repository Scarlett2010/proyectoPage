---
import scale from "/imagenes/logo.png";
import whatsapp from "/imagenes/whatsapp.png";
import email from "/imagenes/email.png";
import ubicacion from "/imagenes/ubicacion.png";
import { SITE_TITLE } from "../consts";

const today = new Date();
---

<footer>
  <nav class="footer-content">
    <!-- Información de contacto -->
    <div class="informacion">
      <div class="logo-nombre">
        <img src={scale.src} alt="Ícono" />
        <h2><a href="/">{SITE_TITLE}</a></h2>
      </div>
      <ul>
        <li><img src={whatsapp.src} alt="Tlf" /> +593 983844657</li>
        <li><img src={email.src} alt="Correo" /> dr.jorgeona@gmail.com</li>
        <li><img src={ubicacion.src} alt="Ubicación" /> Quito, Ecuador</li>
      </ul>
    </div>

    <!-- Mapa -->
    <div class="mapa">
      <h2>Ubicación</h2>
      <iframe
        src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3989.7932339856743!2d-78.4945846!3d-0.2031796!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x91d59b00423962bd%3A0x4849f4f55f9caf93!2sLEXLOCI.%20Abogados!5e0!3m2!1ses!2sec!4v1758310740442!5m2!1ses!2sec"
        width="600"
        height="450"
        style="border:0;"
        allowfullscreen=""
        loading="lazy"
        referrerpolicy="no-referrer-when-downgrade"></iframe>
    </div>
  </nav>

  <hr class="separador" />
  <div class="derechos">
    &copy; {today.getFullYear()} LEXLOCI ABOGADOS. Todos los derechos reservados.
  </div>
</footer>

<style>
  footer {
    background: #163b5e;
    color: white;
    padding: 2em 1em 3em 1em;
    margin-top: 0;
  }

  .footer-content {
    display: flex;
    flex-wrap: wrap;
    justify-content: space-between;
    gap: 2rem;
    max-width: 1100px;
    margin: 0 auto;
  }

  .informacion {
    flex: 1;
    min-width: 250px;
  }

  .logo-nombre {
    display: flex;
    align-items: center;
    gap: 0.5em;
    margin-bottom: 1em;
  }

  .logo-nombre img {
    width: 24px;
    height: 24px;
    object-fit: contain;
  }

  .logo-nombre h2 {
    margin: 0;
    font-size: 1.1em;
  }

  .logo-nombre a {
    text-decoration: none;
    color: white;
  }

  ul {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  li {
    display: flex;
    align-items: center;
    gap: 0.5em;
    margin: 0.3em 0;
  }

  .informacion img {
    width: 40px;
    height: 40px;
    object-fit: contain;
  }

  .mapa {
    flex: 1;
    min-width: 300px;
    max-width: 500px;
  }

  .mapa h2 {
    margin-bottom: 0.5rem;
    font-size: 1em;
    color: white;
  }

  .mapa iframe {
    width: 100%;
    height: 450px;
    max-width: 100%;
    border: 0;
  }

  .separador {
    margin: 2em 0 1em 0;
    border: none;
    border-top: 1px solid white;
  }

  .derechos {
    text-align: center;
    font-size: 0.85em;
  }

  @media (max-width: 768px) {
    .footer-content {
      flex-direction: column;
      padding: 0 1em;
    }

    .mapa iframe {
      height: 200px;
    }

    .logo-nombre {
      justify-content: flex-start;
    }
  }
</style>
