---
import scale from '../assets/scale.png';
import whatsapp from '../assets/whatsapp.png';
import email from '../assets/email.png';
import ubicacion from '../assets/ubicacion.png';
import { SITE_TITLE } from '../consts';

const today = new Date();
---

<footer>
  <nav class="footer-content">
    <!-- Información de contacto -->
    <div class="informacion">
      <div class="logo-nombre">
        <img src={scale.src} alt="Ícono" />
        <h2><a href="/">{SITE_TITLE}</a></h2>
      </div>
      <ul>
        <li><img src={whatsapp.src} alt="Tlf" /> +593 99 123 4567</li>
        <li><img src={email.src} alt="Correo" /> jorge.ona@abogado.com</li>
        <li><img src={ubicacion.src} alt="Ubicación" /> Quito, Ecuador</li>
      </ul>
    </div>

    <!-- Mapa -->
    <div class="mapa">
      <h2>Ubicación</h2>
      <iframe
        src="https://www.google.com/maps/embed?pb=!1m14!1m12!1m3!1d17463.952190672062!2d-78.54576781775963!3d-0.25907690418763324!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!5e0!3m2!1ses!2sec!4v1754454072610!5m2!1ses!2sec"
        width="100%"
        height="250"
        style="border:0; border-radius: 8px;"
        allowfullscreen=""
        loading="lazy"
        referrerpolicy="no-referrer-when-downgrade"
      ></iframe>
    </div>
  </nav>

  <hr class="separador" />
  <div class="derechos">
    &copy; {today.getFullYear()} Jorge Oña. Todos los derechos reservados.
  </div>
</footer>

<style>
  footer {
    background: #1f2a3a;
    color: white;
    padding: 2em 1em 3em 1em;
  }

  .footer-content {
    display: flex;
    flex-wrap: wrap;
    justify-content: space-between;
    gap: 2rem;
    max-width: 1100px;
    margin: 0 auto;
  }

  .informacion {
    flex: 1;
    min-width: 250px;
  }

  .logo-nombre {
    display: flex;
    align-items: center;
    gap: 0.5em;
    margin-bottom: 1em;
  }

  .logo-nombre img {
    width: 24px;
    height: 24px;
    object-fit: contain;
  }

  .logo-nombre h2 {
    margin: 0;
    font-size: 1.1em;
  }

  .logo-nombre a {
    text-decoration: none;
    color: white;
  }

  ul {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  li {
    display: flex;
    align-items: center;
    gap: 0.5em;
    margin: 0.3em 0;
  }

  .informacion img {
    width: 20px;
    height: 20px;
    object-fit: contain;
  }

  .mapa {
    flex: 1;
    min-width: 300px;
    max-width: 500px;
  }

  .mapa h2 {
    margin-bottom: 0.5rem;
    font-size: 1em;
    color: white;
  }

  .separador {
    margin: 2em 0 1em 0;
    border: none;
    border-top: 1px solid white;
  }

  .derechos {
    text-align: center;
    font-size: 0.85em;
  }

  @media (max-width: 768px) {
    .footer-content {
      flex-direction: column;
      padding: 0 1em;
    }

    .mapa iframe {
      height: 180px;
    }

    .logo-nombre {
      justify-content: flex-start;
    }
  }
</style>
