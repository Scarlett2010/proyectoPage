---
import BaseHead from "../../components/BaseHead.astro";
import Header from "../../components/Header.astro";
import Footer from "../../components/Footer.astro";
import { getCollection } from "astro:content";

import type { CollectionEntry } from "astro:content";

export async function getStaticPaths() {
  const servicios: CollectionEntry<"blog">[] = await getCollection("blog");
  return servicios.map((servicio) => ({
    params: { slug: servicio.slug },
    props: { servicio },
  }));
}


const { servicio } = Astro.props;
---

<html lang="es">
  <head>
    <BaseHead title={servicio.data.title} description={servicio.data.description} />
  </head>
  <body>
    <Header />

    <main class="container">
      <h1>{servicio.data.title}</h1>
      <p>{servicio.data.description}</p>
      <div class="contenido">
        {servicio.body}
      </div>
    </main>

    <Footer />
  </body>
</html>

<style>
  .container {
    max-width: 800px;
    margin: 0 auto;
    padding: 2rem;
  }
  .contenido {
    margin-top: 1.5rem;
    line-height: 1.6;
  }
</style>
