    width: 100%;
    max-width: 1000px;
    margin: 3rem auto;
    box-sizing: border-box;
  }

  .benefits-title {
    color: #0041c4;
    font-size: 1.75rem;
    font-weight: 600;
    margin-bottom: 2.5rem;
  }

  .benefits-subtitle {
    display: none;
  }

  .benefits-grid {
    display: flex;
    flex-direction: row;
    justify-content: center;
    align-items: stretch;
    gap: 1.5rem;
    width: 100%;
    box-sizing: border-box;
  }

  .benefit-card {
    display: flex;
    flex-direction: column;
    align-items: center;
    flex: 1;
    max-width: 280px;
    background: white;
    border: 1px solid #e5e7eb;
    border-radius: 12px;
    padding: 2rem 1.5rem;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.06);
    transition: all 0.3s ease;
    box-sizing: border-box;
  }

  .benefit-card:hover {
    box-shadow: 0 4px 16px rgba(0, 0, 0, 0.1);
    transform: translateY(-4px);
  }

  .benefit-icon {
    width: 48px;
    height: 48px;
    border-radius: 50%;
    background: #fff3e0;
    display: flex;
    align-items: center;
    justify-content: center;
    margin-bottom: 1rem;
    color: #d97706;
  }

  .benefit-icon svg {
