    .benefits-section,
    .cards-container,
    .benefit-grid,
    .card,
    .benefit-card {
      width: 100%;
      max-width: 200px;
      height: auto;
      margin: 0 auto;
      display: block;
    }

    a {
      font-size: 0.85rem;
      padding: 0.4em 0.8em;
      margin: 0.5rem auto;
      display: inline-block;
    }

    footer,
    .Footer {
      margin: 0;
      padding: 0.5rem;
      width: 100%;
    }
    p,
    h5,
    h4,
    h3 {
      word-break: break-word;
      hyphens: auto;
    }
  }
