      padding: 1.5rem 1rem;
    }

    .card-image {
      height: 180px;
      max-width: 100%;
    }

    .hero-section {
      height: 400px;
      padding: 1rem;
    }
    .hero-content {
      max-width: 100%;
    }
    .hero-button {
      padding: 0.4em 0.8em;
      font-size: 0.85rem;
    }
  }

  @media (max-width: 380px) {
    body {
      margin: 0;
      padding: 0;
      overflow-x: hidden;
      word-break: break-word;
    }

    .principal,
    .services,
    .second-container,
    .benefits-section,
    .cards-container,
    .benefit-grid,
    .card,
    .benefit-card {
      width: 100%;
      margin: 0;
      padding: 0.5rem;
      box-sizing: border-box;
