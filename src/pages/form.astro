---
import BaseHead from "../components/BaseHead.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import whatsapp from "/imagenes/whatsapp.png";
import email from "/imagenes/email.png";
import linkedin from "/imagenes/linkedin.png";
---

<html lang="es">
  <head>
    <BaseHead
      title="Contacto"
      description="Completa el formulario para solicitar una consulta legal personalizada"
    />
  </head>
  <body>
    <Header />

    <main class="form">
      <h2>Contacto</h2>
      <p class="subtitulo">
        Completa el formulario para solicitar una consulta legal personalizada
      </p>

      <!-- ðŸ”¹ Formulario -->
      <form id="formulario" class="form-card">
        <div class="form-fields">
          <div class="form-group half">
            <label>Nombre *</label>
            <input
              type="text"
              name="nombres"
              placeholder="Ingresa tu nombre completo"
              required
            />
          </div>
          <div class="form-group half">
            <label>Correo *</label>
            <input
              type="email"
              name="correo"
              placeholder="ejemplo@ejemplo.com"
              required
            />
          </div>

          <div class="form-group full-width">
            <label>NÃºmero de celular *</label>
            <input
              type="tel"
              name="numero"
              placeholder="+593 99 123 4567"
              required
            />
          </div>

          <div class="form-group full-width">
            <label>Especialidad de asesoramiento *</label>
            <select name="especialidad" required>
              <option value="">Selecciona el tipo de asesoramiento</option>
              <option value="civil">Derecho Procesal Penal</option>
              <option value="penal">Derecho Constitucional</option>
              <option value="laboral">Derecho Civil</option>
              <option value="empresarial">Otro</option>
            </select>
          </div>

          <div class="form-group full-width">
            <label>Agendar cita (opcional)</label>
            <input type="date" name="fecha" />
          </div>

          <div class="form-group full-width">
            <label>Describe tu caso o consulta *</label>
            <textarea
              name="descripcion"
              rows="4"
              placeholder="Proporciona detalles sobre tu situaciÃ³n legal..."
              required></textarea>
          </div>
        </div>
        <button type="submit">Enviar solicitud de consulta</button>
      </form>

      <div class="contact-cards">
        <div class="contact-card">
          <img src={whatsapp.src} alt="WhatsApp" />
          <a href="https://wa.me/593983844657" target="_blank" rel="noopener">
            +593 98 384 4657
          </a>
        </div>
        <div class="contact-card">
          <img src={email.src} alt="Correo" />
          <a href="mailto:dr.jorgeona@gmail.com"> dr.jorgeona@gmail.com </a>
        </div>
        <div class="contact-card">
          <img src={linkedin.src} alt="Correo" />
          <a href="ejemplo:Lexloci"> Lexloci </a>
        </div>
      </div>
    </main>

    <Footer />

    <script>
      document
        .getElementById("formulario")
        .addEventListener("submit", async (e) => {
          e.preventDefault();

          const formData = new FormData(e.target);
          const data = Object.fromEntries(formData.entries());

          const res = await fetch("/api/envioCorreo", {
            method: "POST",
            headers: {
              "Content-Type": "application/json",
            },
            body: JSON.stringify(data),
          });

          if (res.ok) {
            alert("Solicitud enviada correctamente.");
            e.target.reset();
          } else {
            alert("Error al enviar la solicitud.");
          }
        });
    </script>
  </body>
</html>

<style>
  html,
  body {
    background: rgb(234, 241, 255);
    margin: 0;
    min-height: 100%;
    width: 100%;
    max-width: 100%;
    overflow-x: hidden;
  }

  main {
    max-width: 800px;
    margin: 0 auto;
    padding: 2em 1em;
    font-family: Arial, sans-serif;
    box-sizing: border-box;
    width: 100%;
  }

  h2 {
    text-align: center;
    margin-bottom: 0.3em;
    color: #0041c4;
  }

  .subtitulo {
    text-align: center;
    color: #121111;
    margin-bottom: 1.5em;
    font-size: 1.1em;
  }

  .form-card {
    background: #fff;
    border-radius: 14px;
    box-shadow: 0 4px 8px #abbfd2;
    padding: 2em 1.5em;
    margin-bottom: 2em;
    border: 1px solid #e3e3e3;
    box-sizing: border-box;
    width: 100%;
    max-width: 600px;
    margin-left: auto;
    margin-right: auto;
  }

  /* Layout formulario */
  .form-fields {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 1.5em;
    margin-bottom: 1em;
  }

  .form-group.half {
    grid-column: span 1;
  }

  .form-group.full-width {
    grid-column: 1 / -1;
  }

  .form-group {
    display: flex;
    flex-direction: column;
  }

  label {
    font-weight: 500;
    margin-bottom: 0.4em;
    color: #6595f6;
  }

  input,
  select,
  textarea {
    width: 100%;
    padding: 0.7em;
    font-size: 1em;
    border: 1px solid #b5b6b9;
    border-radius: 7px;
    background: #f7f8fa;
    margin-bottom: 0.2em;
    transition: border-color 0.2s;
    color: #222;
    box-sizing: border-box;
  }

  input::placeholder,
  textarea::placeholder {
    color: #b5b6b9;
  }

  input:focus,
  select:focus,
  textarea:focus {
    border-color: #007bff;
    outline: none;
  }

  textarea {
    resize: vertical;
  }

  button[type="submit"] {
    background: linear-gradient(135deg, #d97706, #f59e0b);
    color: white;
    padding: 1em 2em;
    border: none;
    border-radius: 10px;
    cursor: pointer;
    font-size: 1em;
    font-weight: 500;
    margin-top: 1em;
    transition: all 0.3s ease;
    display: block;
    margin-left: auto;
    margin-right: auto;
    box-shadow: 0 4px 15px rgba(217, 119, 6, 0.3);
  }

  button[type="submit"]:hover {
    background: linear-gradient(135deg, #b45309, #d97706);
    transform: translateY(-3px);
    box-shadow: 0 8px 25px rgba(217, 119, 6, 0.4);
  }

  .contact-cards {
    display: flex;
    gap: 1.2em;
    justify-content: center;
    margin-top: 2.5em;
    margin-bottom: 2.5em;
    flex-wrap: wrap;
    width: 100%;
  }

  .contact-card {
    background: #fff;
    border-radius: 12px;
    box-shadow: 0 4px 8px #abbfd2;
    border: 1px solid #e3e3e3;
    padding: 0.5em 0.8em;
    display: flex;
    align-items: center;
    gap: 0.3em;
    box-sizing: border-box;
    min-width: 0;
    max-width: 290px;
    margin: 0.5em 0;
  }

  .contact-card img {
    width: 32px;
    height: 32px;
    object-fit: contain;
    margin-bottom: 0;
  }

  .contact-card a {
    text-align: left;
    font-size: 1ren;
    color: #0041c4;
    word-break: break-word;
    text-decoration: underline;
  }

  /* Responsive para tablets */
  @media (max-width: 768px) {
    .form-fields {
      grid-template-columns: 1fr;
      gap: 1em;
    }
    .form-group.half {
      grid-column: 1 / -1;
    }
  }

  @media (max-width: 700px) {
    main {
      max-width: 98vw;
      padding: 1rem 0.5rem;
    }
    .form-card {
      max-width: 98vw;
      padding: 1rem 0.5rem;
    }
    .form-fields {
      grid-template-columns: 1fr;
      gap: 0.8em;
    }
    .contact-cards {
      flex-direction: column;
      gap: 1em;
    }
    .contact-card {
      max-width: 100%;
    }
  }

  @media (max-width: 380px) {
    body {
      margin: 0;
      padding: 0;
      overflow-x: hidden;
      word-break: break-word;
    }

    main,
    .form-card,
    .contact-cards,
    .contact-card {
      width: 100%;
      margin: 0;
      padding: 0.5rem;
      box-sizing: border-box;
    }

    .form-fields {
      gap: 0.5em;
    }

    .contact-card img {
      width: 32px;
      height: 32px;
    }

    button[type="submit"] {
      font-size: 0.95em;
      padding: 0.7em 1.5em;
    }

    label,
    input,
    select,
    textarea {
      font-size: 0.95em;
    }

    a {
      font-size: 0.85rem;
      padding: 0.4em 0.8em;
      margin: 0.5rem auto;
      display: inline-block;
    }

    footer,
    .Footer {
      margin: 0;
      padding: 0.5rem;
      width: 100%;
    }
    p,
    h5,
    h4,
    h3 {
      word-break: break-word;
      hyphens: auto;
    }
  }
</style>
